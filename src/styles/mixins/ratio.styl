ratio(width = 300, height = 300, object_fit = cover) {
  position relative
  padding-top (height / width) * 100%
  width 100%

  .ratio-container {
    absolute left top right bottom
    overflow hidden

    img {
      width 100%
      height 100%
      object-fit object_fit
      object-position center
    }
  }
}
